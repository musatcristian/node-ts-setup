{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "tests/**/*",
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "inlineSources": true,
    "newLine": "lf",
    "outDir": "dist",
    "pretty": true,
    "rootDir": "./",
    "sourceMap": true,
    "lib": [
      "es2022"
    ],
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}